        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

var vehStatus = current.vehicle_status;
var vehLoanerStatus = new GlideRecord('x_1152827_lva_loaner_vehicle_catalog');
	vehLoanerStatus.addQuery('sys_id', current.vehicle);
	vehLoanerStatus.query();  //how can we check our work at this spot before moving on?

if (vehLoanerStatus.next()) {

if (vehStatus == 'pending_release'|| vehStatus == 'out_on_field' || vehStatus == 'returned_for_inspection' || vehStatus == 'sent_for_servicing') {
	vehLoanerStatus.status = 'unavailable';
} else if(vehStatus == 'returned_to_warehouse'){
	vehLoanerStatus.status = 'available';
} else if (vehStatus == 'decommissioned'){
	vehLoanerStatus.status = 'decommissioned';
}
vehLoanerStatus.update();
}
})(current, previous);]]></script>
