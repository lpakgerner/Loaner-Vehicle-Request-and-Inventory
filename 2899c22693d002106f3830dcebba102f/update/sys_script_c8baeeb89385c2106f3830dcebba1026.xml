        var currentTrackRecord = new GlideRecord('x_1152827_lva_vehicle_tracker'); //	Create an “if statement” on the vehicle tracker gliderecord to get the current vehicle tracker record (you have this in variable form)
        if (currentTrackRecord.get(currentSysID)) {
            currentTrackRecord.setValue('vehicle_status', current.vehicle_status); //Set the value of the vehicle status field on the GlideRecord to the current vehicle status on the servicing table 

            currentTrackRecord.setValue('tracker_status', 'closed'); //Set the value of the tracker status field to closed on the GlideRecord

